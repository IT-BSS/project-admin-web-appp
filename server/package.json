{
	"name": "bss2-server",
	"version": "1.0.0",
	"description": "BSS2 Server API",
	"main": "src/app.ts",
	"scripts": {
		"build": "tsc",
		"start": "node src/app.ts",
		"dev": "nodemon --exec ts-node src/app.ts",
		"dev:watch": "nodemon --watch src --ext ts --exec ts-node src/app.ts",
		"docker:dev": "docker-compose up bss2-server-dev",
		"docker:dev:build": "docker-compose up --build bss2-server-dev",
		"docker:prod": "docker-compose --profile production up bss2-server-prod",
		"docker:prod:build": "docker-compose --profile production up --build bss2-server-prod",
		"docker:down": "docker-compose down"
	},
	"dependencies": {
		"bcrypt": "^6.0.0",
		"bcryptjs": "^3.0.2",
		"cors": "^2.8.5",
		"dotenv": "^16.3.1",
		"express": "^4.18.2",
		"jsonwebtoken": "^9.0.2",
		"pg": "^8.16.3",
		"pg-hstore": "^2.3.4",
		"reflect-metadata": "^0.2.2",
		"uuid": "^13.0.0",
		"winston": "^3.17.0"
	},
	"devDependencies": {
		"@types/bcrypt": "^6.0.0",
		"@types/bcryptjs": "^3.0.0",
		"@types/cors": "^2.8.17",
		"@types/express": "^4.17.21",
		"@types/jsonwebtoken": "^9.0.10",
		"@types/node": "^20.10.0",
		"@types/pg": "^8.15.5",
		"@types/sequelize": "^6.12.0",
		"@types/uuid": "^11.0.0",
		"@types/validator": "^13.15.3",
		"nodemon": "^3.1.10",
		"ts-node": "^10.9.1",
		"typescript": "^5.3.2"
	}
}
